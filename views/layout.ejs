<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    main {
      flex: 1; /* zorgt dat de footer naar onderen wordt gedrukt */
    }
  </style>
</head>
<body class="bg-light d-flex flex-column">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">SakillaApp</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/films">Films</a></li>
          <li class="nav-item"><a class="nav-link" href="/customers">Customers</a></li>
          <li class="nav-item"><a class="nav-link" href="/rentals">Rentals</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
        </ul>

        <ul class="navbar-nav ms-auto">
          <% if (typeof currentUser !== 'undefined' && currentUser) { %>
            <li class="nav-item">
              <span class="navbar-text me-2">Welkom, <%= currentUser.name %></span>
            </li>
            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm" href="/auth/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm me-2" href="/auth/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm" href="/auth/register">Registreren</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <main class="container mb-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <div class="container">
      <p class="mb-0">© <%= new Date().getFullYear() %> SakillaApp — Gemaakt met Express</p>
    </div>
  </footer>

  <!-- Delete confirmation script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('form.delete-form').forEach(form => {
        form.addEventListener('submit', function(e) {
          if (!confirm('Weet je zeker dat je deze actie wilt uitvoeren?')) {
            e.preventDefault();
          }
        });
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
