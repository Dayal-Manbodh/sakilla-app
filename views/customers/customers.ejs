<h1 class="mb-4">
  ðŸ‘¥ <%= title %>
  <small class="text-muted d-block fs-6">Beheer je klanten eenvoudig</small>
</h1>

<!-- Nieuwe klant knop -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-body bg-light rounded d-flex justify-content-between align-items-center flex-wrap">
    <a href="/customers/new" class="btn btn-success fw-semibold px-4 mb-2">
      âž• Nieuwe Klant
    </a>
  </div>
</div>

<!-- Klantentabel -->
<div class="card border-0 shadow-sm rounded-3 overflow-hidden">
  <div class="card-body p-0">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-dark">
        <tr>
          <th style="width: 10%;">ID</th>
          <th style="width: 35%;">Naam</th>
          <th style="width: 35%;">Email</th>
          <th class="text-end" style="width: 20%;">Acties</th>
        </tr>
      </thead>
      <tbody>
        <% if (customers.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center py-4 text-muted">
              Geen klanten gevonden ðŸ“­
            </td>
          </tr>
        <% } %>

        <% customers.forEach(c => { %>
          <tr class="border-bottom">
            <td class="text-muted"><%= c.customer_id %></td>
            <td><%= c.first_name %> <%= c.last_name %></td>
            <td><%= c.email %></td>
            <td class="text-end">
              <div class="d-inline-flex gap-2">
                <a href="/customers/<%= c.customer_id %>" class="btn btn-sm btn-primary ">
                  Details
                </a>
                <a href="/customers/<%= c.customer_id %>/edit" class="btn btn-sm btn-warning ">
                  Bewerk
                </a>
                <form action="/customers/<%= c.customer_id %>/delete" method="post" class="d-inline delete-form">
                  <button type="submit" class="btn btn-sm btn-danger ">
                    Verwijder
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
