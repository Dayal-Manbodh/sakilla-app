<h1 class="mb-4"><%= title %></h1>

<a href="/customers/new" class="btn btn-success mb-3">+ Nieuwe Klant</a>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Naam</th>
      <th>Email</th>
      <th>Acties</th>
    </tr>
  </thead>
  <tbody>
    <% customers.forEach(c => { %>
      <tr>
        <td><%= c.customer_id %></td>
        <td><%= c.first_name %> <%= c.last_name %></td>
        <td><%= c.email %></td>
        <td>
          <a href="/customers/<%= c.customer_id %>" class="btn btn-sm btn-primary">Details</a>
          <a href="/customers/<%= c.customer_id %>/edit" class="btn btn-sm btn-warning">Bewerken</a>
          <form action="/customers/<%= c.customer_id %>/delete" method="post" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger">Verwijderen</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
