<h1><%= title %></h1>

<form method="post" action="<%= customer ? '/customers/' + customer.customer_id : '/customers' %>" class="mt-3">

  <div class="mb-3">
    <label for="first_name" class="form-label">Voornaam</label>
    <input type="text" class="form-control" id="first_name" name="first_name" 
           value="<%= customer ? customer.first_name : '' %>" required>
  </div>

  <div class="mb-3">
    <label for="last_name" class="form-label">Achternaam</label>
    <input type="text" class="form-control" id="last_name" name="last_name" 
           value="<%= customer ? customer.last_name : '' %>" required>
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">E-mail</label>
    <input type="email" class="form-control" id="email" name="email" 
           value="<%= customer ? customer.email : '' %>">
  </div>

  <button type="submit" class="btn btn-primary">Opslaan</button>
  <a href="/customers" class="btn btn-secondary">Annuleren</a>

  <% if (customer) { %>
    <form method="post" action="/customers/<%= customer.customer_id %>/delete" class="d-inline">
      <button type="submit" class="btn btn-danger">Verwijder</button>
    </form>
  <% } %>
</form>
