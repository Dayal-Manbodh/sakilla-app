<div class="card shadow-sm mb-4">
  <div class="card-body">
    <h1 class="card-title"><%= film.title %></h1>
    <p class="card-text"><strong>Jaar:</strong> <%= film.release_year %></p>
    <p class="card-text"><strong>Taal:</strong> <%= film.language_name %></p>
    <p class="card-text"><strong>Beschrijving:</strong> <%= film.description %></p>

    <p>
      <strong>Beschikbaarheid:</strong> 
      <% if (available) { %>
        <span class="text-success">Beschikbaar</span>
      <% } else { %>
        <span class="text-danger">Uitverkocht</span>
      <% } %>
    </p>

    <a href="/films/<%= film.film_id %>/edit" class="btn btn-warning me-2">Bewerk</a>
    <form method="post" action="/films/<%= film.film_id %>/delete" style="display:inline" class="delete-form d-inline">
      <button type="submit" class="btn btn-danger me-2">Verwijder</button>
    </form>
    <a href="/films" class="btn btn-secondary">Terug naar films</a>
  </div>
</div>
