<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white">
          <h3 class="mb-0"><%= title %></h3>
        </div>
        <div class="card-body">
          <form method="post" action="<%= film ? '/films/' + film.film_id : '/films' %>">
            
            <!-- Titel -->
            <div class="mb-3">
              <label for="title" class="form-label">Titel</label>
              <input type="text" class="form-control" id="title" name="title" 
                     value="<%= film ? film.title : '' %>" required>
            </div>

            <!-- Beschrijving -->
            <div class="mb-3">
              <label for="description" class="form-label">Beschrijving</label>
              <textarea class="form-control" id="description" name="description" rows="4"><%= film ? film.description : '' %></textarea>
            </div>

            <!-- Jaar en Taal naast elkaar -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="release_year" class="form-label">Release Jaar</label>
                <input type="number" class="form-control" id="release_year" name="release_year" 
                       value="<%= film ? film.release_year : '' %>">
              </div>
              <div class="col-md-6 mb-3">
                <label for="language_id" class="form-label">Taal</label>
                <select class="form-select" id="language_id" name="language_id" required>
                  <option value="">-- Kies een taal --</option>
                  <% languages.forEach(lang => { %>
                    <option value="<%= lang.language_id %>" 
                      <%= film && film.language_id === lang.language_id ? 'selected' : '' %>>
                      <%= lang.name %>
                    </option>
                  <% }) %>
                </select>
              </div>
            </div>

            <!-- Huurinformatie -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="rental_duration" class="form-label">Huurduur (dagen)</label>
                <input type="number" class="form-control" id="rental_duration" name="rental_duration" 
                       value="<%= film ? film.rental_duration : 3 %>">
              </div>
              <div class="col-md-6 mb-3">
                <label for="rental_rate" class="form-label">Huurprijs (€)</label>
                <input type="number" step="0.01" class="form-control" id="rental_rate" name="rental_rate" 
                       value="<%= film ? film.rental_rate : 4.99 %>">
              </div>
            </div>

            <!-- Lengte en Vervangingskost -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="length" class="form-label">Lengte (minuten)</label>
                <input type="number" class="form-control" id="length" name="length" 
                       value="<%= film ? film.length : '' %>">
              </div>
              <div class="col-md-6 mb-3">
                <label for="replacement_cost" class="form-label">Vervangingskost (€)</label>
                <input type="number" step="0.01" class="form-control" id="replacement_cost" name="replacement_cost" 
                       value="<%= film ? film.replacement_cost : 19.99 %>">
              </div>
            </div>

            <!-- Rating -->
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <select class="form-select" id="rating" name="rating">
                <option value="G" <%= film && film.rating==='G'?'selected':'' %>>G</option>
                <option value="PG" <%= film && film.rating==='PG'?'selected':'' %>>PG</option>
                <option value="PG-13" <%= film && film.rating==='PG-13'?'selected':'' %>>PG-13</option>
                <option value="R" <%= film && film.rating==='R'?'selected':'' %>>R</option>
                <option value="NC-17" <%= film && film.rating==='NC-17'?'selected':'' %>>NC-17</option>
              </select>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-end">
              <a href="/films" class="btn btn-outline-secondary me-2">Annuleer</a>
              <button type="submit" class="btn btn-success">Opslaan</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
