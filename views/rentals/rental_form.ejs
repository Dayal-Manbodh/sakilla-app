<h1><%= title %></h1>

<form method="post" action="/rentals" class="mt-3">

  <div class="mb-3">
    <label for="film_id" class="form-label">Film</label>
    <select class="form-select" id="film_id" name="film_id" required>
      <% films.forEach(film => { %>
        <option value="<%= film.film_id %>"><%= film.title %> (<%= film.available_count %> beschikbaar)</option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label for="customer_id" class="form-label">Klant</label>
    <select class="form-select" id="customer_id" name="customer_id" required>
      <% customers.forEach(customer => { %>
        <option value="<%= customer.customer_id %>"><%= customer.first_name %> <%= customer.last_name %></option>
      <% }) %>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Verhuur aanmaken</button>
  <a href="/rentals" class="btn btn-secondary">Annuleer</a>

</form>
